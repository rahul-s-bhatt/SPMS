<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },html: {class: "ui form"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" , class: "ui button primary"%>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>
  <div class="four wide column"></div>
</div>
