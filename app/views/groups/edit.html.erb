<div class="ui grid">
    <div class="five wide column"></div>
    <div class="six wide column">
        <h1>Edit Group</h1>
        <br>
        <br>
        <%= form_for( @group , html: {class: "ui form"}) do |form| %>
            <p>
                <%= form.label :name %>
                    <br>
                    <%= form.text_field :name %>
            </p>

            <p>
                <%= form.label :code %>
                    <br>
                    <%= form.text_field :code %>
            </p>

            <p>
                <%= form.label :criteria %>
                    <br>
                    <%= form.text_field :criteria %>
            </p>
            <p>
                <%= form.submit"Update" ,class: "ui button primary" %>

            </p>
            <% end %>
    </div>
    <div class="five wide column"></div>
</div>