<div class="ui comments">
    <div class="comment">
        <a class="avatar">
            <%= image_tag  current_user.image_url, class: "ui avatar image" %>
    </a>
        <div class="content">
            <div class="author"><%= current_user.name %></div>
            <%= form_for [@commentable, @comment], html: {class: "ui form"} do |f| %>
                <div class="field">
                    <%= f.text_area :content %>
                    <br>
                    <br>
                    <%= f.submit "Submit", class: 'ui primary button' %>
                </div>
            <% end %>
        </div>
    </div>
</div>
